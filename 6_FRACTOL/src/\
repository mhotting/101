#include "./../includes/fractol.h"

int	main(int argc, char **argv)
{
	t_bag	bag;
	void	*ptr_bag;

	ptr_bag = (void *)bag;
	bag.mlx = mlx_init();
	bag.win = mlxnew_window(bag.mlx, 2560, 1350, "FRACTOL: A WAY TO INFINITY");
	mlx_key_hook(bag.win, &ft_eventmg, ptr_bag);
	return (0);
}
